<div class="maintitle"><h2>Connecte toi</h2></div>
<div class="demiloutre"> <%= image_tag("SLtopgif.gif", size: "120") %></div>
  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="pastequeform">
      <div class="form-inputs-">
        <div class="email-input">
          <%= f.input :email,
                      required: false,
                      autofocus: true,
                      input_html: { autocomplete: "email" } %>
        </div>
        <div class="password-input">
        <%= f.input :password,
                    required: false,
                    input_html: { autocomplete: "current-password" } %>
        </div>
        <div class="remember_me">
        <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
        </div>

        <div class="form-actions-">
          <%= f.button  :submit,"Log in", :class => "btn-"  %>
          <%= link_to "Sign up", new_user_registration_path, class: "btn-" %>
        </div>
      </div>
    </div>

  <% end %>


<%= render "devise/shared/links" %>
