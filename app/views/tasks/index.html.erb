<%= render "shared/banner" %>
<div class="container-task">
  <div class="weather">
    <%if @weather.downcase.include?("rain") %>
      <div class="rainy"></div>
    <% elsif%>
      <% @weather.downcase.include?("sun") %>
      <div class="sunny"></div>
    <% else %>
      <% @weather.downcase.include?("cloud") %>
      <div class="cloudy"></div>
    <% end %>
  </div>
  <div class="loutreindex">
        <% if @general_score < 5 %>
          <%= image_tag 'Nakedottertopgif.gif', size: "120" %>
        <% else %>
          <%= image_tag "SLtopgif.gif", size: "120" %>
        <% end %>
    </div>
      <div class= "row-">
        <div class="col-sm">
          <div data-controller="validate">
          <div class="popup" data-validate-target="validate">
            <h1>Bien joué ! Tu as validé cette tâche !</h1>
            <h2>C'est en avançant petit à petit qu'on fait de grandes choses, continues comme ça !</h2>
            <%= link_to tasks_path do %>
             <%=  image_tag("SLwdgif.gif", size: "200") %>
            <% end %>
          </div>
          <div class="bigbigcontainer" data-validate-target="container">
            <div class="col-sm">
              <% @tasks.each do |task| %>
                <div class="task", style="border-left: solid 10px <%= task.color %>">
                  <%= image_tag( task.logo ) %>
                  <p><%= task.name.capitalize %></p>
                  <div class="col-sm">
                    <%= simple_form_for task, remote: true, html: { 'data-action': "ajax:success->validate#displayPopup" } do |f| %>
                      <%= button_tag( :class => "btn") do %>
                      <%= image_tag "done.png" %>
                      <% end %>
                    <% end %>
                  </div>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
</div>
    <%= render "navbar" %>
