<%= render "shared/banner" %>
<div class="container-task">
  <div class= "row-">
    <div class="col-sm">
      <% @tasks.each do |task| %>
        <div class="task", style="border: solid 3px <%= task.color %>">
          <%= image_tag( task.logo ) %>
          <p><%= task.name.capitalize %></p>
          <div class="col-">
            <%= simple_form_for(task, remote: true) do |f| %>
              <%= button_tag( :class => "btn") do %>
                <%= image_tag "done.png" %>
              <% end %>
            <% end %>
          </div>

        </div>
      <% end %>
    </div>
  </div>

  <div class= "col-sm">
    <div class="loutre">
      <%= image_tag("Super_Loutre.png") %>
    </div>
    <div class="col-sm">
      <%= render "navbar" %>
    </div>
  </div>

</div>
