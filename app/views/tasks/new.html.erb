 <div class="container py-5">
  <div class="row">
    <div class="col-12 col-xs-12">
      <div class="bg-white rounded p-3 shadow">
        <h1>Which task do you want to add? </h1>
        <%= simple_form_for @task do |task| %>
            <div class = "inputsform">
              <%= task.input :name %>
              <%= task.input :category, collection: ["sport", "health", "business", "hobby"]%>
            </div>
            <div class="twobtn">
                <%= task.submit class: "creatbtn" %>
               <%= link_to 'Back', tasks_path, class: 'backbtn' %>
            </div>
        <% end %>
      </div>
    </div>
  </div>
  <%= image_tag("SuperloutreFlying.png")%>
  <%= render "navbar" %>
</div>
