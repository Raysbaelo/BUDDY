 <div class="container py-5">
  <div class="row">
    <div class="col-12 col-md-6 offset-lg-3">
      <div class="bg-white rounded p-3 shadow">
        <h3>Add your task</h3>
        <%= simple_form_for @task do |task| %>
          <%= task.input :name %>
          <%= task.input :frequence %>
          <%= task.input :category %>
          <%= task.submit class: 'btn btn-secondary' %>
        <% end %>
      </div>
    </div>
  </div>
</div>
